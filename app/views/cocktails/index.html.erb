<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://lorempixel.com/1000/400/nightlife/');">
  <div class="banner-content">
    <h1>Slade's Cocktail Maker</h1>
    <p>Create Your Cocktail Recipes</p>
    <div class="text-center padded">
      <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
      <%= link_to cocktail_path(cocktail) do %>
      <div class="wrapper">
        <div class="card radius shadowDepth1">
          <div class="card__image border-tlr-radius">
            <img src="https://unsplash.it/400/200"" alt="nature" class="border-tlr-radius">
          </div>
          <div class="card__content card__padding">
            <article class="card__article">
              <h2><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
            </article>
          </div>
        </div>
      </div>
      </div>
    <% end %>
 <% end %>
  </div>


